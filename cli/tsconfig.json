{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "@data/*": ["../lib/data/*"]
    }
  },
  "include": ["bin/**/*.ts", "src/**/*.ts"]
}
